  <Frame
    name="RemixChecklistLeafNodeBaseTemplate"
    mixin="RemixCheckListLeafNodeBaseMixin"
    inherits="BackdropTemplate"
    virtual="true"
  >
    <Size y="22" />
    <Layers>
      <Layer level="ARTWORK">
        <Texture
          parentKey="icon"
        >
          <Anchors>
            <Anchor point="LEFT" x="10" />
          </Anchors>
          <Size x="16" y="16" />
        </Texture>
        <FontString
          parentKey="itemLink"
          font="GameFontNormal"
          justifyH="LEFT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Size x="200" />
          <Anchors>
            <Anchor point="LEFT" x="26" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnEnter method="OnEnter" />
      <OnLeave method="OnLeave" />
      <OnHyperlinkClick method="OnHyperlinkClick" />
    </Scripts>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeGenericTemplate"
    mixin="RemixCheckListLeafNodeGenericMixin"
    inherits="RemixChecklistLeafNodeBaseTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="bronze"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeAppearanceTemplate"
