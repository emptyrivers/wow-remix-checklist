<Ui
  xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd"
>
  <Include file="mixins.lua" />
  <Frame
    name="RemixChecklistFrameTemplate"
    inherits="DefaultPanelFlatTemplate"
    mixin="RemixChecklistFrameMixin"
    toplevel="true"
    enableMouse="true"
    clampedToScreen="true"
    movable="true"
    frameStrata="DIALOG"
    parent="UIParent"
    virtual="true"
  >
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnMouseDown method="OnMouseDown" />
      <OnMouseUp method="OnMouseUp" />
    </Scripts>
    <Size x="450" y="300" />
    <Frames>
      <Button 
        parentKey="CloseButton"
        inherits="UIButtonTemplate"
        frameLevel="510"
        scale="0.1875"
      >
        <!-- combined with scale, this is 24,24 -->
        <Size x="128" y="128" />
        <KeyValues>
          <KeyValue key="buttonArtKit" value="128-RedButton-Exit" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPRIGHT" x="-1" />
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent():Hide()
          </OnClick>
        </Scripts>
      </Button>
      <Button
        parentKey="RefreshButton"
        inherits="UIButtonTemplate"
        frameLevel="510"
        scale="0.1875"
      >
        <Size x="128" y="128" />
        <KeyValues>
          <KeyValue key="buttonArtKit" value="128-RedButton-Refresh" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" relativeKey="$parent.CloseButton"/>
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent():Refresh()
          </OnClick>
        </Scripts>
      </Button>
      <Frame
        parentKey="ScrollBox"
        inherits="WowScrollBoxList"
      >
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="10" y="-22" />
          <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-2" y="1" />
        </Anchors>
      </Frame>
      <EventFrame
        parentKey="ScrollBar"
        inherits="WowTrimScrollBar"
      >
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent.ScrollBox"/>
          <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeKey="$parent.ScrollBox"/>
        </Anchors>
      </EventFrame>
    </Frames>
  </Frame>
  <Frame
    name="RemixChecklistTreeNodeTemplate"
    mixin="RemixCheckListTreeNodeMixin"
    inherits="BackdropTemplate"
    virtual="true"
  >
    <Size y="22" />
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnEnter method="OnEnter" />
      <OnLeave method="OnLeave" />
    </Scripts>
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="title"
          font="GameFontNormal"
          justifyH="LEFT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="LEFT" x="30" />
          </Anchors>
        </FontString>
        <FontString
          parentKey="progress"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-90" />
          </Anchors>
        </FontString>
        <FontString
          parentKey="bronze"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <!-- lifted from Blizzard_BuffFrame -->
      <CheckButton parentKey="CollapseAndExpandButton" mixin="RemixCheckListCollapseAndExpandButtonMixin">
				<Size x="15" y="30"/>
				<Anchors>
					<Anchor point="LEFT"/>
				</Anchors>
				<Scripts>
					<OnClick method="OnClick"/>
					<OnLoad method="OnLoad"/>
				</Scripts>
				<NormalTexture parentKey="NormalTexture" atlas="bag-arrow" useAtlasSize="false">
					<Size x="10" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</NormalTexture>
				<PushedTexture parentKey="PushedTexture" atlas="bag-arrow" useAtlasSize="false">
					<Size x="10" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</PushedTexture>
				<HighlightTexture parentKey="HighlightTexture" atlas="bag-arrow" alpha=".4" alphaMode="ADD" useAtlasSize="false">
					<Size x="10" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</HighlightTexture>
			</CheckButton>
    </Frames>
  </Frame>

  <Frame
    name="RemixChecklistTreeNodeWeaponTemplate"
    mixin="RemixCheckListTreeNodeWeaponMixin"
    inherits="RemixChecklistTreeNodeTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="lootOn"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeBaseTemplate"
    mixin="RemixCheckListLeafNodeBaseMixin"
    inherits="BackdropTemplate"
    virtual="true"
  >
    <Size y="22" />
    <Layers>
      <Layer level="ARTWORK">
        <Texture
          parentKey="icon"
        >
          <Anchors>
            <Anchor point="LEFT" x="10" />
          </Anchors>
          <Size x="16" y="16" />
        </Texture>
        <FontString
          parentKey="itemLink"
          font="GameFontNormal"
          justifyH="LEFT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Size x="200" />
          <Anchors>
            <Anchor point="LEFT" x="26" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnEnter method="OnEnter" />
      <OnLeave method="OnLeave" />
      <OnHyperlinkClick method="OnHyperlinkClick" />
    </Scripts>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeGenericTemplate"
    mixin="RemixCheckListLeafNodeGenericMixin"
    inherits="RemixChecklistLeafNodeBaseTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="bronze"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeAppearanceTemplate"
    mixin="RemixCheckListLeafNodeAppearanceMixin"
    inherits="RemixChecklistLeafNodeBaseTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="slots"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-90" />
          </Anchors>
        </FontString>
        <FontString
          parentKey="bronze"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeBoneTemplate"
    mixin="RemixCheckListLeafNodeBoneMixin"
    inherits="RemixChecklistLeafNodeBaseTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="bones"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-90" />
          </Anchors>
        </FontString>
        <FontString
          parentKey="bronze"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame
    name="RemixChecklistLeafNodeWeaponTemplate"
    mixin="RemixCheckListLeafNodeWeaponMixin"
    inherits="RemixChecklistLeafNodeBaseTemplate"
    virtual="true"
  >
    <Layers>
      <Layer level="ARTWORK">
        <FontString
          parentKey="location"
          font="GameFontNormal"
          justifyH="RIGHT"
          justifyV="MIDDLE"
          wordwrap="false"
        >
          <Anchors>
            <Anchor point="RIGHT" x="-5" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
